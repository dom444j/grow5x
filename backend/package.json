{
  "name": "grow5x-backend",
  "version": "1.0.0",
  "description": "Backend API for Grow5X platform",
  "main": "src/server.js",
  "scripts": {
    "prestart": "node src/utils/integrity-checks.js",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "ci:guard": "node src/utils/integrity-checks.js",
    "seed:admin": "node scripts/seed-admin.js",
    "seed:packages": "node scripts/seed-packages.js",
    "seed:wallets": "node scripts/seed-wallets.js",
    "seed:all": "npm run seed:admin && npm run seed:packages && npm run seed:wallets",
    "seed:production": "node scripts/seed-production.js",
    "seed:production:safe": "bash scripts/run-seeds.sh",
    "seed:production:force": "bash scripts/run-seeds.sh --no-confirm",
    "security:check": "node scripts/security-check.js",
    "security:verify": "npm run security:check",
    "security:change-passwords": "node scripts/change-default-passwords.js",
    "security:configure-wallets": "node scripts/configure-real-wallets.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest tests/e2e",
    "test:functional": "node scripts/functional-tests.js",
    "test:post-deploy": "npm run security:check && npm run test:functional",
    "telegram:setup": "node src/scripts/setup-telegram-webhook.js setup",
    "telegram:status": "node src/scripts/setup-telegram-webhook.js status",
    "telegram:delete": "node src/scripts/setup-telegram-webhook.js delete",
    "schema:apply": "npx ts-node scripts/apply-schema.ts",
    "schema:diff": "npx ts-node scripts/schema-diff.ts",
    "schema:normalize": "npx ts-node scripts/normalize-collections.ts",
    "schema:backfill": "npx ts-node scripts/backfill-data.ts",
    "schema:setup": "npm run schema:normalize && npm run schema:apply && npm run schema:backfill",
    "test:redis": "node test-redis-connection.js"
  },
  "keywords": [
    "grow5x",
    "api",
    "backend",
    "trading"
  ],
  "author": "Grow5X Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "axios-cookiejar-support": "^6.0.4",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.1.5",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "rate-limit-mongo": "^2.3.2",
    "rate-limit-redis": "^4.2.2",
    "rate-limiter-flexible": "^4.0.1",
    "swagger-ui-express": "^5.0.1",
    "telegraf": "^4.15.6",
    "tough-cookie": "^6.0.0",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@types/node": "^24.3.0",
    "babel-jest": "^30.0.5",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "ws": "^8.14.2"
  }
}
