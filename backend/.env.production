# Configuración de Producción - VPS
# IMPORTANTE: Este archivo debe ser copiado como .env en el VPS

# Entorno
NODE_ENV=production
PORT=5000

# Base de Datos - SOLO ATLAS EN PRODUCCIÓN
MONGODB_URI=mongodb+srv://grow5x_app:<PASSWORD_URL_ENCODED>@<CLUSTER>.mongodb.net/grow5x?retryWrites=true&w=majority&appName=grow5x
DB_KIND=atlas

# JWT
JWT_SECRET=change_me_to_secure_random_string_in_production
JWT_EXPIRES=7d

# Funcionalidades
ENABLE_BENEFITS_RELEASE=true
ENABLE_COMMISSIONS_RELEASE=true
READ_ONLY_API=false

# CORS
ALLOWED_ORIGIN=https://grow5x.app

# Telegram
TELEGRAM_BOT_TOKEN=xxxx
TELEGRAM_ADMIN_CHAT_ID=xxxx
TELEGRAM_WEBHOOK_SECRET=xxxxx

# Configuración adicional para producción
LOG_LEVEL=info
MAX_REQUEST_SIZE=10mb
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de seguridad
TRUST_PROXY=true
SECURE_COOKIES=true

# IMPORTANTE: 
# 1. Reemplazar <PASSWORD_URL_ENCODED> con la contraseña real URL-encoded
# 2. Reemplazar <CLUSTER> con el nombre real del cluster de Atlas
# 3. Cambiar JWT_SECRET por una cadena aleatoria segura
# 4. Configurar los tokens reales de Telegram
# 5. Verificar que ALLOWED_ORIGIN coincida con el dominio real